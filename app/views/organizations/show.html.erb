<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @organization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @organization.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:region) %>:</strong></dt>
  <dd><%= @organization.region %></dd>
  <dt><strong><%= model_class.human_attribute_name(:partnership_start_date) %>:</strong></dt>
  <dd><%= @organization.partnership_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @organization.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:osra_id) %>:</strong></dt>
  <dd><%= @organization.osra_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sponsors) %>:</strong></dt>
  <dd><% @organization.sponsors.each do |s| %>
    <%= link_to s.name, sponsors_path(s) %>
    <% end %>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              organizations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
